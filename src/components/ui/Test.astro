---
import { cn } from "@/lib/utils";
import * as PopoverPrimitive from "@radix-ui/react-popover";

// Clase de utilidad para añadir estilos
---

<PopoverPrimitive.Root client:load>
  <PopoverPrimitive.Trigger className="trigger">
    <slot name="trigger" /> <!-- Aquí puedes pasar el contenido del trigger -->
  </PopoverPrimitive.Trigger>

  <PopoverPrimitive.Anchor className="anchor">
    <slot name="anchor" /> <!-- Si necesitas un anchor adicional -->
  </PopoverPrimitive.Anchor>

  <PopoverPrimitive.Portal>
    <PopoverPrimitive.Content
      align="center"
      sideOffset={4}
      className={cn([
        "z-50 w-72 rounded-md border bg-popover p-4 text-popover-foreground shadow-md outline-none",
        "data-[state=open]:animate-in data-[state=closed]:animate-out",
        "data-[state=closed]:fade-out-0 data-[state=open]:fade-in-0",
        "data-[state=closed]:zoom-out-95 data-[state=open]:zoom-in-95",
        "data-[side=bottom]:slide-in-from-top-2 data-[side=left]:slide-in-from-right-2",
        "data-[side=right]:slide-in-from-left-2 data-[side=top]:slide-in-from-bottom-2"
      ])}
    >
      <slot /> <!-- Aquí va el contenido del popover -->
    </PopoverPrimitive.Content>
  </PopoverPrimitive.Portal>
</PopoverPrimitive.Root>

<style>
  /* Puedes agregar tus estilos personalizados aquí */
  .trigger {
    /* Estilos para el disparador */
  }

  .anchor {
    /* Estilos para el ancla, si es necesario */
  }

  /* Estilos personalizados para el contenido */
  .popover-content {
    /* Tus estilos aquí */
  }
</style>